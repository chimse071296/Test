<p id="notice"><%= notice %></p>

<h1>Tasks#Index</h1>
<%= link_to 'Add Task', new_task_path %>
<table border="1" bordercolor="black" >
  <thead>
    <tr>
      <th>Content</th>
      <th>Comment</th>
      <th>Status</th>
      <th>Show</th>

    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.content %></td>
        <td><%= task.comment %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Show', task %></td>   
      </tr>
    <% end %>
  </tbody>
</table>

<br>


